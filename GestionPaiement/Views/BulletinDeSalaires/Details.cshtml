@model GestionPaiement.Models.DataModel.BulletinDeSalaire

@{
    ViewData["Title"] = "Détails du Bulletin de Salaire";
}

<div class="container mt-4">
    <div class="alert alert-primary text-center">
        <h2>Application de gestion de paiement</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Détails du Bulletin de Salaire</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Agent</dt>
                <dd class="col-sm-9">@Model.Agent?.Nom @Model.Agent?.Prenom</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("dd MMMM yyyy")</dd>

                <dt class="col-sm-3">Salaire Brut</dt>
                <dd class="col-sm-9">@Model.SalaireBrut.ToString("N0") FCFA</dd>

                <dt class="col-sm-3">Salaire Net</dt>
                <dd class="col-sm-9">@Model.SalaireNet.ToString("N0") FCFA</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.IdBulletin" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>

            <form method="post" asp-action="EnvoyerEmail" asp-route-id="@Model.IdBulletin">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-envelope"></i> Envoyer par Email
                </button>
            </form>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>
