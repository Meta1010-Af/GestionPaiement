@model GestionPaiement.Models.DataModel.Paiement

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="alert alert-primary">
        <h1><marquee>Application de gestion de paiement</marquee></h1>
    </div>
</div>

<h4>Paiement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AgentId" class="control-label"></label>
                <select asp-for="AgentId" class ="form-control" asp-items="ViewBag.AgentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MontantPaye" class="control-label"></label>
                <input asp-for="MontantPaye" class="form-control" />
                <span asp-validation-for="MontantPaye" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePaiement" class="control-label"></label>
                <input asp-for="DatePaiement" class="form-control" />
                <span asp-validation-for="DatePaiement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeDePaiement" class="control-label"></label>
                <input asp-for="ModeDePaiement" class="form-control" />
                <span asp-validation-for="ModeDePaiement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link">
        <i class="fas fa-arrow-left"></i>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
