@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="container">
    <div class="alert alert-primary">
        <h1><marquee>Application de gestion de paiement</marquee></h1>
    </div>
</div>
<h1>Listes des Roles</h1>
<a class="btn btn-primary" asp-action="AjouterRole"><i class="fas fa-plus"></i>Ajouter un nouveau Role</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td> <!-- Utilisez 'Name' au lieu de 'Nom' -->
            </tr>
        }
    </tbody>
</table>