@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Titre"] = "Ajouter Role";
}

<h1>@ViewData["Titre"]</h1>
<div class="container">
    <div class="alert alert-primary">
        <h1><marquee>Application de gestion de paiement</marquee></h1>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Ajouter un nouveau rôle</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
        <a asp-action="Index" class="btn btn-link">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}